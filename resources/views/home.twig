<!-- Section Our Location -->
<section>
	<header class="our-locations">
		<h2>{{ trans('home.sections.location.title') }}</h2>
	</header>
	<div class="location-content">
		<div class="location-map">
				<img src="{{ base_url() }}/upload/map/{{ location.map }}">
		</div>
	</div>
</section> 
<!-- end Section Our Location -->

{% endblock %}