{% extends 'templates/default.twig' %}

{% block content %}

	<section>

		{% for new in news %}
		<div class="box">
			<div class="header">
				<h2 class="news-title">{{ new.title }}</h2>
				<small>{{ trans('home.post-on') }} {{ new.updated_at }}</small>
			</div>
			<hr class="news-line">
			<div class="body">

				{{ new.contents|raw }}
				
			</div>
			<div class="footer">
				<ul class="actions news-more-btn" style="text-align:right;">
					<li><a href="{{ path_for('c.news.search', {'id': new.id}) }}" class="button">{{ trans('home.buttons.more') }}</a></li>
				</ul>
			</div>
		</div>
		{% endfor %}
		
	</section>

{% endblock %}